<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="product_exp.discountshop.RetailerRegister"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/register"
        android:id="@+id/rregisterTextView"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/email"
        android:id="@+id/rremailTextView"
        android:textSize="25sp"
        android:layout_below="@+id/rregisterTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/username"
        android:id="@+id/rrusernameTextView"
        android:textSize="25sp"
        android:layout_below="@+id/rremailTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/password"
        android:id="@+id/rrpasswordTextView"
        android:textSize="25sp"
        android:layout_below="@+id/rrusernameTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rremailEditText"
        android:layout_toEndOf="@id/rremailTextView"
        android:layout_alignBottom="@id/rremailTextView"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/crusernameEditText"
        android:layout_alignBottom="@+id/rrusernameTextView"
        android:layout_toEndOf="@+id/rrusernameTextView"
     />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/rrpasswordEditText"
        android:layout_alignBottom="@+id/rrpasswordTextView"
        android:layout_toEndOf="@+id/rrpasswordTextView"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/retailerName"
        android:id="@+id/rrshopnameTextView"
        android:textSize="25sp"
        android:layout_below="@+id/rrpasswordEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rrshopnameEditText"
        android:layout_alignBottom="@+id/rrshopnameTextView"
        android:layout_toEndOf="@+id/rrshopnameTextView"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/address"
        android:id="@+id/rraddressTextView"
        android:textSize="25sp"
        android:layout_below="@+id/rrshopnameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rraddressEditText"
        android:layout_alignBottom="@+id/rraddressTextView"
        android:layout_toEndOf="@+id/rraddressTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/zipcode"
        android:id="@+id/rrzipcodeTextView"
        android:textSize="25sp"
        android:layout_below="@+id/rraddressEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rrzipcodeEditText"
        android:layout_alignBottom="@+id/rrzipcodeTextView"
        android:layout_toEndOf="@+id/rrzipcodeTextView"
        android:inputType="number" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textColor="#CBD4CB"
        android:textSize="30sp"
        android:background="@drawable/save_button"
        android:shadowColor="#707070"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/submit"
        android:id="@+id/rrsubmitButton"
        android:layout_below="@+id/rrzipcodeEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="goRetailerItemList" />

</RelativeLayout>
